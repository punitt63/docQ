{
  "openapi": "3.0.3",
  "info": {
    "title": "ABDM HIP SMS Notify2 API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://dev.abdm.gov.in"
    }
  ],
  "paths": {
    "/api/hiecm/hip/v3/link/patient/links/sms/notify2": {
      "post": {
        "summary": "Send SMS notification for patient link",
        "operationId": "sendSmsNotification",
        "tags": ["HIP Linking"],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "REQUEST-ID",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "description": "Unique request ID for idempotency"
          },
          {
            "name": "TIMESTAMP",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date-time"
            },
            "description": "ISO 8601 timestamp of request"
          },
          {
            "name": "X-CM-ID",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Consent Manager ID"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "requestId": {
                    "type": "string",
                    "format": "uuid"
                  },
                  "timestamp": {
                    "type": "string",
                    "format": "date-time"
                  },
                  "notification": {
                    "type": "object",
                    "properties": {
                      "phoneNo": {
                        "type": "string",
                        "example": "+91XXXXXXXXXX"
                      },
                      "hip": {
                        "type": "object",
                        "properties": {
                          "name": {
                            "type": "string",
                            "example": "ABC Hospital"
                          },
                          "id": {
                            "type": "string",
                            "example": "HIP_12345"
                          }
                        }
                      }
                    }
                  }
                },
                "required": ["requestId", "timestamp", "notification"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Notification accepted successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "ACKNOWLEDGED"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
