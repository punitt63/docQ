{
  "openapi": "3.0.0",
  "info": {
    "title": "Health Facility Token API",
    "description": "API to obtain access tokens using client credentials flow",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "Local development server"
    }
  ],
  "paths": {
    "/realms/health-facility/protocol/openid-connect/token": {
      "post": {
        "summary": "Obtain access token",
        "description": "Get an access token using client credentials grant type",
        "operationId": "getAccessToken",
        "tags": [
          "Authentication"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/x-www-form-urlencoded": {
              "schema": {
                "type": "object",
                "required": [
                  "grant_type",
                  "client_id",
                  "client_secret"
                ],
                "properties": {
                  "grant_type": {
                    "type": "string",
                    "enum": [
                      "client_credentials"
                    ],
                    "description": "The grant type for the token request"
                  },
                  "client_id": {
                    "type": "string",
                    "description": "The client identifier",
                    "example": "health-facility-backend-app"
                  },
                  "client_secret": {
                    "type": "string",
                    "description": "The client secret",
                    "format": "password",
                    "example": "nQusYBu6a7ygw3sZMOmiY4wPKdUPsurw"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful token response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "access_token": {
                      "type": "string",
                      "description": "The access token"
                    },
                    "expires_in": {
                      "type": "integer",
                      "description": "Token expiration time in seconds"
                    },
                    "token_type": {
                      "type": "string",
                      "description": "Type of token (usually \"Bearer\")"
                    },
                    "scope": {
                      "type": "string",
                      "description": "Granted scopes"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request - invalid parameters",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "description": "Error code"
                    },
                    "error_description": {
                      "type": "string",
                      "description": "Detailed error message"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - invalid credentials",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "description": "Error code"
                    },
                    "error_description": {
                      "type": "string",
                      "description": "Detailed error message"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}